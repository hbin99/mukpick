<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jumpstd.mukpick.member.mapper.MemberMapper">
    <select id="userList" resultType="com.jumpstd.mukpick.member.dto.MemberDto" parameterType="com.jumpstd.mukpick.member.dto.MemberDto">
        SELECT
            *
        FROM TB_USER
        WHERE USER_ID = #{userId}
    </select>

    <select id="checkUser" resultType="int" parameterType="com.jumpstd.mukpick.member.dto.MemberDto">
        SELECT
            COUNT(*)
        FROM TB_USER
        WHERE USER_ID = #{userId}
        <if test='email != "" and email != null '>
            AND EMAIL = #{email}
        </if>
        <if test='password != "" and password != null '>
            AND PASSWORD = #{password}
        </if>
    </select>

    <insert id="register" parameterType="com.jumpstd.mukpick.member.dto.MemberDto" >
        INSERT INTO TB_USER (
             USER_ID
            ,PASSWORD
            ,USER_NAME
            ,PHONE
            ,PROFILE_IMG
            ,EMAIL
            ,ROLE_TYPE
            ,GENDER
            ,AGE
        )VALUES(
             #{userId}
            ,#{password}
            ,#{userName}
            ,#{phone}
            ,#{profileImg}
            ,#{email}
            ,#{roleType}
            ,#{gender}
            ,#{age}
        )
    </insert>

    <update id="update" parameterType="com.jumpstd.mukpick.member.dto.MemberDto" >
        UPDATE TB_USER
        SET
        <if test='password != "" and password != null '>
            PASSWORD = #{password}
        </if>
        <if test='phone != "" and phone != null '>
          ,PHONE = #{phone}
        </if>
        <if test='profileImg != "" and profileImg != null '>
          ,PROFILE_IMG =#{profileImg}
        </if>
        <if test='email != "" and email != null '>
          ,EMAIL = #{email}
        </if>
        <if test='age != "" and age != null '>
          ,AGE = #{age}
        </if>
        <if test='roleType != "" and roleType != null '>
            ,ROLE_TYPE = #{roleType}
        </if>
        WHERE USER_ID = #{userId}
    </update>

    <select id="userIdFind" resultType="String" parameterType="com.jumpstd.mukpick.member.dto.MemberDto">
        SELECT USER_ID
        FROM TB_USER
        WHERE EMAIL = #{email}
        AND USER_NAME = #{userName}
        AND PHONE = #{phone}
    </select>

    <select id="userAuthCheck" resultType="int" parameterType="hashMap">
        SELECT COUNT(USER_ID)
        FROM TB_USER
        WHERE USER_ID = #{userId}
          AND AUTHKEY = #{key}
    </select>


</mapper>
