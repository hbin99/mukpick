<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jumpstd.mukpick.member.mapper.MemberMapper">

    <select id="findByUser" resultType="int" parameterType="com.jumpstd.mukpick.member.dto.SearchVaildMemberDto">
        SELECT
            COUNT(*)
        FROM TB_USER
        WHERE USER_ID = #{userId}
        <if test='email != null '>
            AND EMAIL = #{email}
        </if>
        <if test=' password != null '>
            AND PASSWORD = #{password}
        </if>
    </select>

    <insert id="register" parameterType="com.jumpstd.mukpick.member.dto.MemberRegisteDto" >
        INSERT INTO TB_USER (
             USER_ID
            ,PASSWORD
            ,USER_NAME
            ,PHONE
            ,PROFILE_IMG
            ,EMAIL
            ,ROLE_TYPE
            ,GENDER
            ,AGE
        )VALUES(
             #{userId}
            ,#{password}
            ,#{userName}
            ,#{phone}
            ,#{profileImg}
            ,#{email}
            ,#{roleType}
            ,#{gender}
            ,#{age}
        )
    </insert>

    <update id="update" parameterType="com.jumpstd.mukpick.member.dto.MemberInfoDto" >
        UPDATE TB_USER
        <trim prefix="SET" suffixOverrides=",">
            <if test='password != null '>
                PASSWORD = #{password},
            </if>
            <if test='phone != null '>
              PHONE = #{phone},
            </if>
            <if test='profileImg != null '>
              PROFILE_IMG =#{profileImg},
            </if>
            <if test='email != null '>
              EMAIL = #{email},
            </if>
            <if test='age != null '>
              AGE = #{age},
            </if>
            <if test='roleType != null '>
                ROLE_TYPE = #{roleType},
            </if>
            <if test=' authKey != null '>
                AUTH_KEY = #{authKey},
            </if>
        </trim>
        WHERE USER_ID = #{userId}
    </update>

    <select id="findByUserId" resultType="String" parameterType="com.jumpstd.mukpick.member.dto.SearchUserIdDto">
        SELECT USER_ID
        FROM TB_USER
        WHERE EMAIL = #{email}
        AND USER_NAME = #{userName}
        AND PHONE = #{phone}
    </select>

    <select id="userAuthCheck" resultType="int" parameterType="com.jumpstd.mukpick.member.dto.SearchVaildAuthMemberDto">
        SELECT COUNT(USER_ID)
        FROM TB_USER
        WHERE AUTH_KEY = #{key}
        AND USER_ID = #{userId}
    </select>

    <select id="findByUserData" resultType="com.jumpstd.mukpick.member.dto.MemberInfoDto" parameterType="String">
        SELECT  USER_ID
             ,PASSWORD
             ,USER_NAME
             ,PHONE
             ,PROFILE_IMG
             ,EMAIL
             ,ROLE_TYPE
             ,GENDER
             ,AGE
        FROM TB_USER
        WHERE USER_ID = #{userId}
    </select>


</mapper>
